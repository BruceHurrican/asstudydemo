            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#336DCAF6"
            android:orientation="horizontal"
            android:gravity="center_vertical"
        >
    <RadioButton
            android:id="@+id/btn_1"
            android:layout_weight="1"
            android:text="首页1"
            android:checked="true"
            style="@style/BaseRadioButton"/>
    <RadioButton
            android:id="@+id/btn_2"
            android:layout_weight="1"
            android:text="首页2"
            style="@style/BaseRadioButton"/>
    <RadioButton
            android:id="@+id/btn_3"
            android:layout_weight="1"
            android:text="首页3"
            style="@style/BaseRadioButton"/>
    <RadioButton
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:text="首页4"
            style="@style/BaseRadioButton"/>
</RadioGroup>
