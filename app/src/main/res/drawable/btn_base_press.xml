<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 设置填充颜色 -->
            <solid android:color="#A5D8F5"/>
            <corners android:radius="10dp"/>
            <!-- 设置 Button 里面的文字与 Button边界的间隔 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#1979CA"/>
            <corners android:radius="10dp"/>
            <!-- 设置 Button 里面的文字与 Button边界的间隔 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>